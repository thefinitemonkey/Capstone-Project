<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingEnd="8dp"
    android:paddingStart="8dp"
    android:paddingTop="16dp">

    <ImageView
        android:id="@+id/iv_team_logo"
        android:layout_width="80dp"
        android:layout_height="60dp"
        tools:contentDescription="To be set programtically"
        android:maxHeight="@dimen/logo_max_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_nfl" />

    <TextView
        android:id="@+id/tv_player_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:ellipsize="end"
        android:gravity="start"
        android:lines="1"
        android:text="@string/playerNamePlaceholder"
        android:textAllCaps="true"
        android:textColor="@color/color_player_name"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_team_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/tv_placeholder_team_name"
        android:textColor="@color/color_team_name"
        app:layout_constraintStart_toEndOf="@+id/iv_team_logo"
        app:layout_constraintTop_toBottomOf="@+id/tv_player_name" />

    <ImageView
        android:id="@+id/iv_offense_color"
        android:layout_width="15dp"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_green_dark"
        tools:contentDescription="To be set programatically"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_team_name" />

    <TextView
        android:id="@+id/tv_offense_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        tools:text="TextView"
        android:textColor="@color/color_team_name"
        app:layout_constraintStart_toEndOf="@+id/iv_offense_color"
        app:layout_constraintTop_toBottomOf="@+id/tv_team_name" />

    <TextView
        android:id="@+id/tv_offense_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        tools:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/tv_offense_type"
        app:layout_constraintTop_toBottomOf="@+id/tv_team_name" />

    <TextView
        android:id="@+id/tv_offense_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingEnd="4dp"
        android:paddingStart="4dp"
        tools:text="TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_offense_type" />
</android.support.constraint.ConstraintLayout>